<div class="container col-3 mt-5" style="height: calc(100vh - 312px)">
<h1>Review the Pitch</h1>
<%= simple_form_for [@booking, @review] do |f| %>
  <%= f.input :rating, collection: (0..5)  %>
  <%= f.input :comment,
              hint: "minimum 3 characteres" %>
  <span class="d-display justify-content-centered"><%= f.submit "Submit Review", class:"btn btn-success rounded-4 col-12 mx-1" %></span>
<% end %>

  <%= link_to "Go back to your bookings", bookings_path(@booking), class: "btn btn-gray rounded-4 mb-3 col-12" %>
</div>
